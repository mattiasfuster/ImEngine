{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 29 },

  "configurePresets": [
    {
      "name": "win64-base-mc",
      "displayName": "Windows x64 (Ninja Multi-Config)",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;RelWithDebInfo;Release",
        "CMAKE_C_COMPILER": "C:/Program Files/LLVM/bin/clang-cl.exe",
        "CMAKE_CXX_COMPILER": "C:/Program Files/LLVM/bin/clang-cl.exe",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_MESSAGE_LOG_LEVEL": "VERBOSE",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "toolset": { "value": "ClangCL", "strategy": "external" },
      "architecture": { "value": "x64", "strategy": "external" },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
    },

    {
      "name": "engine-only",
      "inherits": "win64-base-mc",
      "cacheVariables": {
        "IMENGINE_BUILD_CORE": "ON",
        "IMENGINE_BUILD_ENGINE": "ON",
        "IMENGINE_BUILD_RUNTIME": "ON",
        "IMENGINE_BUILD_SANDBOX": "OFF",
        "IMENGINE_BUILD_EDITOR": "OFF"
      }
    },
    {
      "name": "sandbox-app",
      "inherits": "win64-base-mc",
      "cacheVariables": {
        "IMENGINE_BUILD_CORE": "ON",
        "IMENGINE_BUILD_ENGINE": "ON",
        "IMENGINE_BUILD_RUNTIME": "OFF",
        "IMENGINE_BUILD_SANDBOX": "ON",
        "IMENGINE_BUILD_EDITOR": "OFF"
      }
    },
    {
      "name": "editor-app",
      "inherits": "win64-base-mc",
      "cacheVariables": {
        "IMENGINE_BUILD_CORE": "ON",
        "IMENGINE_BUILD_ENGINE": "ON",
        "IMENGINE_BUILD_RUNTIME": "OFF",
        "IMENGINE_BUILD_SANDBOX": "OFF",
        "IMENGINE_BUILD_EDITOR": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "engine-Debug",
      "configurePreset": "engine-only",
      "targets": ["ImEngine-Core", "ImEngine-Engine", "ImEngine-Runtime"],
      "configuration": "Debug",
      "jobs": 12,
      "verbose": true
    },
    {
      "name": "engine-RelWithDebInfo",
      "configurePreset": "engine-only",
      "targets": ["ImEngine-Core", "ImEngine-Engine", "ImEngine-Runtime"],
      "configuration": "RelWithDebInfo",
      "jobs": 12
    },
    {
      "name": "engine-Release",
      "configurePreset": "engine-only",
      "targets": ["ImEngine-Core", "ImEngine-Engine", "ImEngine-Runtime"],
      "configuration": "Release",
      "jobs": 12
    },

    {
      "name": "sandbox-Debug",
      "configurePreset": "sandbox-app",
      "targets": ["ImEngine-Sandbox"],
      "configuration": "Debug",
      "jobs": 12
    },
    {
      "name": "sandbox-RelWithDebInfo",
      "configurePreset": "sandbox-app",
      "targets": ["ImEngine-Sandbox"],
      "configuration": "RelWithDebInfo",
      "jobs": 12
    },
    {
      "name": "sandbox-Release",
      "configurePreset": "sandbox-app",
      "targets": ["ImEngine-Sandbox"],
      "configuration": "Release",
      "jobs": 12
    },

    {
      "name": "editor-Debug",
      "configurePreset": "editor-app",
      "targets": ["ImEngine-Editor"],
      "configuration": "Debug",
      "jobs": 12
    },
    {
      "name": "editor-RelWithDebInfo",
      "configurePreset": "editor-app",
      "targets": ["ImEngine-Editor"],
      "configuration": "RelWithDebInfo",
      "jobs": 12
    },
    {
      "name": "editor-Release",
      "configurePreset": "editor-app",
      "targets": ["ImEngine-Editor"],
      "configuration": "Release",
      "jobs": 12
    },

    {
      "name": "install-engine-Debug",
      "configurePreset": "engine-only",
      "configuration": "Debug",
      "targets": ["install"],
      "jobs": 12
    },
    {
      "name": "install-sandbox-Release",
      "configurePreset": "sandbox-app",
      "configuration": "Release",
      "targets": ["install"],
      "jobs": 12
    },
    {
      "name": "install-editor-RelWithDebInfo",
      "configurePreset": "editor-app",
      "configuration": "RelWithDebInfo",
      "targets": ["install"],
      "jobs": 12
    }
  ],

  "testPresets": [
    {
      "name": "ctest-sandbox-Debug",
      "configurePreset": "sandbox-app",
      "configuration": "Debug"
    }
  ]
}
