{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "C://Program Files//LLVM//bin//clang.exe",
        "CMAKE_CXX_COMPILER": "C://Program Files//LLVM//bin//clang++.exe",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_LINKER": "C:/Program Files/LLVM/bin/lld.exe",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_COMPILER_LAUNCHER": "${sourceDir}/ImEngine/Tools/ccache.exe",
        "CMAKE_CXX_COMPILER_LAUNCHER": "${sourceDir}/ImEngine/Tools/ccache.exe"
      },
      "environment": {
        "CC": "ccache clang",
        "CXX": "ccache clang++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-windows-debug",
      "displayName": "x64-windows-debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-windows-release",
      "displayName": "64-windows-release",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-windows-debug",
      "configurePreset": "x64-windows-debug"
    },
    {
      "name": "x64-windows-release",
      "configurePreset": "x64-windows-release"
    }
  ]
}